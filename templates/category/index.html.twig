{% extends 'base.html.twig' %}

{% block title %}Wild Series
{% endblock %}

{% block body %}
	<h1>Toutes les Catégories :
	</h1>
	{% for category in categories %}
		<div>
			<h2>{{ loop.index }}
				/
				{{ category.name }}
			</h2>
			<a href="{{ path("category_show", { categoryName: category.name }) }}">Voir la catégorie</a>
		</div>
	{% else %}
		Aucunes catégories trouvées.
	{% endfor %}
	<div>
		<a href="{{ path("category_new" ) }}">
			Ajouter une nouvelle catégorie</a>
	</div>
	<a href="{{ path('app_index') }}">
		Retour à l'accueil
	</a>

{% endblock %}
